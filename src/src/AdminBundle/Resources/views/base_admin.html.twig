{% extends "@AdminBundle/Resources/views/base.html.twig" %}

{% block navigation %}
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">Event Manager</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
                aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link"{% if event_type_link_active is defined %} active{% endif %}"
                       href="{{ path('event_type') }}">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if organizers_link_active is defined %} active{% endif %}"
                       href="{{ path('organizers') }}">Organizers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if languages_link_active is defined %} active{% endif %}"
                        href="{{ path('languages') }}">Languages</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Mailing list</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if admins_link_active is defined %} active{% endif %}"
                       href="{{ path('admins') }}">Admins</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('logout') }}">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}
