{% extends "@AdminBundle/Resources/views/base_admin.html.twig" %}

{% block content %}
<h1>
    <span>Admin manager</span>
    <a class='btn btn-primary float-sm-right' href="{{ path('admins_create') }}">Add new admin</a>
</h1>
<table class="table table-bordered">
    <thead class="thead-light">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
    {% for admin in admins %}
        <tr>
            <th scope="row">{{ loop.index }}</th>
            <td>{{ admin.email }}</td>
            <td><a href="{{ path('admins_edit', {'id': admin.id}) }}">Edit</a></td>
            <td><a href="#" data-toggle="modal" data-target="#deleteModal{{  admin.id }}">Delete</a></td>
        </tr>
        <!-- Modal -->
        <div class="modal fade" id="deleteModal{{ admin.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Delete object</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete user {{ admin.email }} with id {{ admin.id }}?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <form action="{{ path('admins_delete', {'id': admin.id}) }}" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}
    </tbody>
</table>
{% endblock %}
