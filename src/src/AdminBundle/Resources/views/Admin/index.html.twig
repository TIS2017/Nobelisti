{% extends "@AdminBundle/Resources/views/base.html.twig" %}

{% block content %}
<h1>
    <span>Admin manager</span>
    <a class='btn btn-primary float-sm-right' href="{{ path('create') }}">Add new admin</a>
</h1>
<table class="table table-bordered">
    <thead class="thead-light">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
    {% for admin in admins %}
        <tr>
            <th scope="row">{{ admin.id }}</th>
            <td>{{ admin.email }}</td>
            <td><a href="#">Edit</a></td>
            <td><a href="#" data-toggle="modal" data-target="#deleteModal">Delete</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}


{% block modals %}
    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete object</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete it?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}