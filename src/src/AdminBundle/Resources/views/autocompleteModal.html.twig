<div class="modal fade" id="{{ modal_id }}" tabindex="-1" role="dialog" aria-labelledby="assignModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignModalLabel">{{ modal_title }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <div class="col-sm-12">
                        <form method="post" action="{{ action_path }}">
                            <label for="birds">{{ modal_content }}</label>
                            <input
                                    name="{{ modal_input_name }}"
                                    data-autocomplete-path="{{ modal_input_path }}"
                                    id="modal_input_{{ modal_input_name }}"
                                    type="text" class="form-control"
                            >
                        </form>
                    </div>
                </div>
                <div class="list-group">
                    <div id="log_{{ modal_input_name }}" class="ui-widget-content log"></div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-danger">Assign</button>
            </div>
        </div>
    </div>
</div>
